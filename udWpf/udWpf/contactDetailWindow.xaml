<Window x:Class="udWpf.contactDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:udWpf"
        mc:Ignorable="d"
        Title="contactDetailWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="detailName" Margin="5"/>
            <TextBox x:Name="detailEmail" Margin="5"/>
            <TextBox x:Name="detailPhone" Margin="5"/>
            <Button x:Name="detailUpdateButton" Content="Save" Margin="5" Click="detailUpdateButton_Click"/>
            <Button x:Name="detailDeleteButton" Content="Delete" Margin="5" Foreground="red" Click="detailDeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
